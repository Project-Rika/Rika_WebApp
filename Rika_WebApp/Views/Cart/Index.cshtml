@using Rika_WebApp.Models
@model List<CartItemModel>


<div class="container">
    <div class="my-cart">
        <h2 class="pb-2">My Cart</h2>
        @if (!Model.Any())
        {
            <p>Your cart is empty.</p>
        }
        else
        {


            @foreach (var item in Model)
            {
                <div class="cart-item">

                    <div class="cart-img"></div>

                    <div class="product-details">
                        <p class="product-name">@item.ProductName</p>
                        <p class="product-desc">Description</p>
                        <p class="product-price">$@item.Price.ToString("0.00")</p>
                    </div>

                    <div class="quantity-controls">
                        <button class="quantity-btn decrease">-</button>
                        <span class="quantity">1</span>
                        <button class="quantity-btn increase">+</button>
                    </div>

                </div>
            }
            <form asp-action="EmptyCart" method="post">
                <button type="submit">Empty Cart</button>
            </form>

           


            <div class="cart-checkout">
                <div class="cart-total">
                    <p class="cart-total-item">Total (@Model.Sum(p => p.Quantity) item):</p>
                    <p class="cart-total-price">$@Model.Sum(p => p.Price * p.Quantity)</p>
                </div>
                
                <button>Proceed to Checkout</button>
            </div>


           
        }
    </div>
    
</div>