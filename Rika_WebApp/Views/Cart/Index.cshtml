@using Rika_WebApp.Models
@model List<CartItemModel>


<div class="container">
    <h2>Your Cart</h2>
     @if (!Model.Any())
     {
         <p>Your cart is empty.</p>
     }
     else
     {
         <table>
             <tr>
                 <th>Product</th>
                 <th>Quantity</th>
                 <th>Price</th>
             </tr>

             @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.ProductName</td>
                     <td>@item.Quantity</td>
                     <td>@(item.Price * item.Quantity)</td>
                 </tr>
             }
         </table>

         <h3>Total: @Model.Sum(p => p.Price * p.Quantity)</h3>


        <form asp-action="EmptyCart" method="post">
            <button type="submit">Empty Cart</button>
        </form>
     }
</div>