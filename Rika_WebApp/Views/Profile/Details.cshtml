@using Rika_WebApp.ViewModels.Profile
@model ProfileFormViewModel
@{
    
}

<section id="profile-details">
    <div class="container">
        <div class="user-info">
            <form method="post" asp-controller="Profile" asp-action="Details" class="mt-4" novalidate>
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName" class="form-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName" class="form-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" type="email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Phonenumber" class="form-label"></label>
                    <input asp-for="@Model.Phonenumber" type="tel" class="form-control" />
                    <span asp-validation-for="@Model.Phonenumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ProfileImageUrl" class="form-label"></label>
                    <input asp-for="@Model.ProfileImageUrl" type="url" class="form-control" />
                    <span asp-validation-for="@Model.ProfileImageUrl" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Age" class="form-label"></label>
                    <input asp-for="@Model.Age" type="number" min="1" max="100" class="form-control" />
                    <span asp-validation-for="@Model.Age" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label class="form-label d-block">Gender</label>
                    <div class="form-check form-check-inline">
                        <input asp-for="@Model.Gender" class="form-check-input" type="checkbox" value="Male" id="male" />
                        <label asp-for="@Model.Gender" class="form-check-label" for="male">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="@Model.Gender" class="form-check-input" type="checkbox" value="Female" id="female" />
                        <label asp-for="@Model.Gender" class="form-check-label" for="female">Female</label>
                    </div>
                    <span asp-validation-for="@Model.Gender" class="text-danger d-block"></span>
                </div>

                <div class="col-12 mb-5">
                    <button type="submit" class="btn btn-dark mt-4">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</section>